<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#212121"
    android:layout_marginTop="5dp">


  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@mipmap/ic_launcher" />

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="561dp"
      android:layout_margin="8dp"
      android:background="#3d8ab1"
      android:orientation="vertical"
      app:cardCornerRadius="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="1">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">


        <TextView
            android:id="@+id/nombre"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_weight="1.30"
            android:text="tipo:"
            android:textSize="30sp"
            android:textStyle="italic" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="78dp"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/tipo_pokemon"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_weight="1.30"
            android:text="tipo:"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/desc1_pokemon"
            android:layout_width="128dp"
            android:layout_height="100dp"
            android:layout_weight="2.76"
            android:text="tipo"
            android:textSize="30sp"
            android:textStyle="italic" />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="66dp"
          android:layout_marginTop="5dp"
          android:layout_weight="1.24"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/atack_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ataques:"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/desc2_pokemon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="30sp"
            android:textStyle="italic" />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/area_pokemon"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/desc3_pokemon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tipo"
            android:textSize="30sp"
            android:textStyle="italic" />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:weightSum="1">

        <TextView
            android:id="@+id/nada1_pokemon"
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:text="evolucion"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/evolucion"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="0.92"
            android:text="evo"
            android:textSize="30sp"
            android:textStyle="italic" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="333dp"
          android:layout_height="78dp"
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:weightSum="1"
          android:layout_weight="0.62">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/ic_launcher" />


      </LinearLayout>
    </LinearLayout>


  </android.support.v7.widget.CardView>

  <TextView
        android:id="@+id/mbre"
        android:layout_width="238dp"
        android:layout_height="match_parent"
        android:text="hola mundo"
        android:textSize="30sp"
        android:textStyle="italic" />


</LinearLayout>